MKSPEC = sed \
	  -e "s,[@]rpmprefix[@],$(rpmprefix),g" \
	  -e "s,[@]_prefix[@],$(prefix),g" \
	  -e "s/[@]tool_target[@]/$(TARGET)/g" \
	  -e "/^%package -n [@]rpmprefix[@][@]tool_target[@]-gcc/d" \
	  -e "s/-n [@]rpmprefix[@][@]tool_target[@]-gcc//" \
	  -e "s,[@]build_infos[@],$(build_infos),g" \
	  -e "@sysdirpattern@" \
	  -e "/[@]PATCH/d"
