noinst_DATA += timer$(LIB_VARIANT).rel

if HAS_MP
EXTRA_PROGRAMS += shmsupp.rel
CLEANFILES += shmsupp.rel
shmsupp_rel_SOURCES = shmsupp/addrconv.c shmsupp/getcfg.c shmsupp/lock.c \
    shmsupp/mpisr.c
