MEMORY
	{
	ram : org = 0x3000, l = 1M
	}

SECTIONS
{
        .text 0x3000 :
	{
	    text_start = . ;
	    _text_start = . ;
            *(.text)
	    etext = ALIGN( 0x10 ) ;
	    _etext = .;
        }
        .data ADDR( .text ) + SIZEOF( .text ):
	{
	    data_start = . ;
            _data_start = .;
            *(.data)
	    edata = ALIGN( 0x10 ) ;
            _edata = .;
        }
        .bss ADDR( .data ) + SIZEOF( .data ):
        {
	    bss_start = . ;
	    _bss_start = . ;
	    *(.bss)
	    *(COMMON)
	    end = . ;
	    _end = . ;
	}
}
